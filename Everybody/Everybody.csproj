        <None Update="Puzzles\Everybody02\Everybody02-3.txt">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="Puzzles\Everybody03\Everybody02-1.txt">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="Puzzles\Everybody03\Everybody03-3.txt">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
